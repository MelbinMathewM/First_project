                                    <input type="number" name="addressPin" class="form-control" placeholder="Enter PIN"
                                        id="addressPin">
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success text-center mt-3 mb-4">Upload</button>
