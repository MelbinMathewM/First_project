<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(cart.length > 0){ %>
                                <% cart.forEach((carte) => { %>
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img src="/static/productImages/<%= carte.productImage[0] %>" alt="" height="100px" width="100px">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h5><%= carte.productName %></h5>
                                                <h6>&#8377;<%= carte.productPrice %></h6>
                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <button class="qty-down" data-cart-id="<%= carte._id %>">&lt;</button>
                                                    <input type="text" id="quantityUpdate-<%= carte._id %>" value="<%= carte.productQuantity %>" data-cart-id="<%= carte._id %>">
                                                    <button class="qty-up" data-cart-id="<%= carte._id %>">&gt;</button>
                                                </div>
                                            </div>
                                        </td>                                        
                                        <td class="cart__price">&#8377;<%= carte.cartPrice %></td>
                                        <td class="cart__close"><button class="btn"><i class="mdi mdi-close" style="background-color: transparent;"></i></button></td>
                                    </tr>
                                <% }) %>
                            <% } else{ %>
                               <tr class="text-center">
                                <td>Cart is empty!</td>
                               </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue_btn">
                            <a href="/shop"><button class="btn" style="background-color: rebeccapurple; color: white;">Continue Shopping</button></a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <button class="btn btn-dark" id="updateCartBtn"><i class="fa fa-spinner"></i> Update cart</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
