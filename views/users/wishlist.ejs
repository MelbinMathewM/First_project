<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3">
            <div class="header__logo">
                <a class="text-decoration-none" href="/"><h1 class="fw-bold" style="font-style: italic;">Glassics</h1></a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <nav class="header__menu mobile-menu">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/shop">Shop</a></li>
                    <% if (isAuthenticated) { %>
                        <li><a href='/account/<%= user.userName %>/profile'>Account</a></li>
                    <% } else { %>
                        <li><a href="/login">Sign In</a></li>
                    <% } %>
                    <li><a href="./blog.html">Blog</a></li>
                    <li><a href="./contact.html">Contacts</a></li>
                </ul>
            </nav>
        </div>
        <div class="col-lg-3 col-md-3">
            <div class="header__nav__option">
                <a href="#" class="search-switch"><img src="img/icon/search.png" alt=""></a>
                <a href="#"><img src="img/icon/heart.png" alt=""></a>
                <a href="/cart" class="active"><img src="img/icon/cart.png" alt=""> <span>0</span></a>
            </div>
        </div>
    </div>
    <div class="canvas__open"><i class="fa fa-bars"></i></div>
</div>
<!-- Header Section End -->

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shopping Cart</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Home</a>
                        <a href="./shop.html">Shop</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<% if(locals.message) { %>
    <div class="alert text-warning text-center" id="message">
        <%= message %>
    </div>
<% } %>
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <% if(wishlist.length > 0){ %>
                        <% wishlist.forEach((list) => { %>
                            <div class="col-lg-6 col-md-6 mb-4">
                                <div class="card">
                                    <img src="/static/productImages/<%= list.productImage %>" class="card-img-top" alt="<%= list.productName %>" height="200px">
                                    <div class="card-body">
                                        <h6 class="card-title"><%= list.productName %></h6>
                                        <h5 class="card-text">&#8377;<%= list.productPrice %></h5>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <button class="btn btn-outline-danger cart__close" data-cart-id="<%= list._id %>"><i class="mdi mdi-close"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else{ %>
                        <div class="col-12 text-center">
                            <p>Wishlist is empty!</p>
                        </div>
                    <% } %>
                </div>
                <div class="row mt-4">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue_btn">
                            <a href="/shop"><button class="btn btn-primary">Continue Shopping</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->

