      object-fit: cover;
    }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmReAdd(brandId) {
          Swal.fire({
            title: 'Are you sure?',
            text: 'This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, add it!',
            cancelButtonText: 'Cancel',
            reverseButtons: true
          }).then((result) => {
            if (result.isConfirmed) {
              fetch(`/admin/brands/reAdd_brands?id=${brandId}`, {
                method: 'GET'
              })
              .then(response => response.json())
              .then(data => {
                if (data.message === 'Brand added to Brands') {
                  Swal.fire(
                    'Added!',
                    'Your brand has been added.',
                    'success'
                  ).then(() => {
                    window.location.reload();
                  });
                } else {
                  Swal.fire(
                    'Error!',
                    'There was a problem adding your brand.',
                    'error'
                  ).then(() => {
                    window.location.reload();
                  });
                }
              })
              .catch(error => {
                Swal.fire(
                  'Error!',
                  'There was a problem adding your brand.',
                  'error'
                );
              });
            }
          });
        }
      </script>

