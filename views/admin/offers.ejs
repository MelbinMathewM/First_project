    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function handleEditOfferTypeChange(offerId) {
            const offerType = document.getElementById('offerType_' + offerId).value;
            document.getElementById('categorySection_' + offerId).style.display = offerType === 'categoryOffer' ? 'block' : 'none';
            document.getElementById('productSection_' + offerId).style.display = offerType === 'productOffer' ? 'block' : 'none';
        }
        
        function closeEditModal(offerId) {
            document.getElementById('offerEditModal_' + offerId).style.display = 'none';
        }
        </script>
    <script>
        document.querySelectorAll('.modal').forEach(modal => {
            modal.style.display = 'none'; // Initially hide all modals
        });

        function openEditModal(offerId) {
            document.getElementById(`offerEditModal_${offerId}`).style.display = 'block';
        }

        function closeEditModal(offerId) {
            document.getElementById(`offerEditModal_${offerId}`).style.display = 'none';
        }

        function confirmDelete(offerId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you really want to delete this offer?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/offers/delete/${offerId}`, {
                        method: 'DELETE'
                    })
                        .then(response => response.json())
                        .then(result => {
                            if (result.success) {
                                Swal.fire({
                                    title: 'Deleted!',
                                    text: 'Offer deleted successfully',
                                    icon: 'success',
                                    confirmButtonText: 'OK'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: 'Error deleting offer',
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: 'Error deleting offer',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        });
                }
            });
        }


        document.querySelectorAll('form[id^="offerEditForm_"]').forEach(form => {
    form.addEventListener('submit', function (event) {
        event.preventDefault();
        const offerId = this.offerId.value;
        const formData = new FormData(this);

        const offerData = {
            offerName: formData.get('offerName'),
            offerDescription: formData.get('offerDescription'),
            discountPercentage: parseFloat(formData.get('discountPercentage')),
            offerType: formData.get('offerType'),
            typeName: formData.get('typeName'),
            categoryId: formData.get('categoryId') || null,
            productId: formData.get('productId') || null,
            isActive: formData.get('isActive') === 'on',
            expiryDate: formData.get('expiryDate')
        };

        fetch(`/admin/offers/edit/${offerId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(offerData)
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                alert('Offer updated successfully');
                location.reload();
            } else {
                alert('Error updating offer: ' + result.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error updating offer');
        });
    });
});

    </script>
