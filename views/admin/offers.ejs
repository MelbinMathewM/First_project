                                                                    </div>
                                                                    <div class="col">
                                                                        <label for="expiryDate_<%= offer._id %>">Expiry Date</label>
                                                                        <input type="date" id="expiryDate_<%= offer._id %>" class="form-control" name="expiryDate" value="<%= offer.expiryDate.toISOString().split('T')[0] %>" required>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <div class="row">
                                                                    <div class="col text-center">
                                                                        <button class="btn btn-primary" type="submit">Save Changes</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <input type="hidden" name="offerId" value="<%= offer._id %>">
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
