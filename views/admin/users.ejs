                  <thead>
                      <tr class="text-center">
                          <th>Image</th>
                          <th>Name</th>
                          <th>Username</th>
                          <th>Email</th>
                          <th>Mobile</th>
                          <th>Status</th>
                      </tr>
                  </thead>
                  <tbody class="text-center">
                      <% if(users.length > 0) { %>
                          <% for(let i = 0; i < users.length; i++) { %>
                              <tr>
                                  <td><img src="<%= users[i].userImage ? `/static/userImages/${users[i].userImage}` : '/static/userImages/default.jpg' %>" alt="" width="150px" height="150px"></td>
